{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <div class="col-4 m-auto mt-5">
        <h1>Album</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ album.year }}</td>
            </tr>
            <tr>
                <th>Tracks</th>
                <td>
                    <ul>
                        {% for tracks in album.tracks %}
                            <li>{{ tracks.title }} ({{ tracks.duration }})</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_album_index') }}">back to list</a>

        <a class="btn btn-warning" href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a>

        {{ include('album/_delete_form.html.twig') }}
    </div>
{% endblock %}
